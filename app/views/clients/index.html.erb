<div class="row">
	<div class="col-md-12">
		<div class="page-header">
			<h1>Listing Clients <small> Total : <%= @clients.size %> </small></h1>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-6">
		<%= link_to new_client_path, class: "btn btn-primary btn-sm pull-right" do %>
			<span class="glyphicon glyphicon-plus"></span> Add Client
		<% end %>

		<table class="table">
			<thead>
				<tr>
					<th>Name </th>
					<th>Company</th>
					<th>Mobile</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<% @clients.each do |client| %>
				<tr>
					<td><%= client.name %></td>
					<td><%= client.company %></td>
					<td><%= client.mobile %></td>
					<td>	
						<%= link_to client_path(client) do %>
								<span class="glyphicon glyphicon-eye-open"></span>
						<% end %>
					</td>
				</tr>
			<% end %>
			</tbody>
		</table>
	</div>

	<div class="col-md-6">
		<% data = {} 
			 @clients.each do |client|
			 	data[client.name] = client.projects.size 
	 		 end
		%>
	<%= bar_chart(data) %>
	</div>
</div>


