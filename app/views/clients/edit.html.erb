<h2>Edit Client</h2>
<%= form_for @client do |f| %>

<%= f.label :name %><br/>
<%= f.text_field :name, class: "form-control" %><br/>

<%= f.label :company %><br/>
<%= f.text_field :company %><br/>

<%= f.label :email %><br/>
<%= f.email_field :email %><br/>

<%= f.label :mobile %><br/>
<%= f.text_field :mobile %><br/>

<%= f.submit %> 

<% end %>

<%= link_to "back", clients_path %>