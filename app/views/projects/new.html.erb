<h2>Add Project</h2>

<%= form_for @project do |f| %>


<div class="error" style="color:red">
	<% if @project.errors.any? %>
		<h3>These errors prohibitted the form from being saved: </h3>
		<ul>
			<% @project.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
</div>

<%= f.label :client_id %><br/>
<%= f.collection_select :client_id, Client.all, :id, :name, prompt: "Select Client"  %><br/>

<%= f.label :name %><br/>
<%= f.text_field :name %><br/>

<%= f.label :description %><br/>
<%= f.text_area :description %><br/>

<%= f.label :status %><br/>
<%= f.select :status, ["new", "on-going", "completed"], prompt: "Select Status" %><br/>

<%= f.label :start_date %><br/>
<%= f.date_select :start_date, order: [:day,:month,:year] %><br/>

<%= f.label :categories %><br/>
<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
<br/>
<%= f.submit %>

<% end %>